Compression yes

IdentityFile ~/.ssh/porting

# for builds.gams.com and buildmeister, keep connection open for 5min and reuse
# also they don't have password authentication, so can disable it here to avoid prompt if key not loaded

Host builds.gams.com
   PasswordAuthentication no
   ControlMaster auto
   ControlPath ~/.ssh/control-%h_%p_%r
   ControlPersist 300

Host internal.gams.com
   PasswordAuthentication no
   ControlMaster auto
   ControlPath ~/.ssh/control-%h_%p_%r
   ControlPersist 300

# some shortcuts

